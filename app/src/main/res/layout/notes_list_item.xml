<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/note_item_main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="59dp"
            android:background="#fff"
            android:weightSum="8"
            android:orientation="horizontal">
            <View
                android:layout_width="5dp"
                android:layout_height="fill_parent"
                android:background="#7DCAB0" />

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/note_item_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Notes app"
                    android:textSize="20dp"/>


                <TextView
                    android:id="@+id/note_item_desc"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Dummy Text for a notes app Dummy Text for a notes app Dummy Text for a notes appDummy Text for a notes appDummy Text for a notes app"
                    android:textColor="#aaa"
                    android:textSize="12dp"
                    android:lines="1"/>


            </LinearLayout>


            <ImageView
                android:alpha="0.6"
                android:id="@+id/delete_note_button"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:src="@drawable/ic_action_discard"/>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ddd" />
</LinearLayout>